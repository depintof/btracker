<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/general_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productItem"
        android:text="Producto"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="@color/primaryText"
        android:gravity="left"
        android:layout_alignParentTop="true"
        android:maxEms="10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionItem"
        android:text="Descripcion asdlyewsdmbvrtahjsldkhqiwgdekasdhbklasdghvaolshvlajnhfv"
        android:maxLines="2"
        android:textSize="14sp"
        android:textColor="@color/secondaryText"
        android:gravity="left"
        android:maxEms="10"
        android:layout_below="@+id/discountPriceItem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discountPriceItem"
        android:text="$34.230"
        android:textSize="16sp"
        android:textColor="@color/accentColor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:maxEms="4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/purchaseDate"
        android:text="2016-03-12 08:59:15"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/secondaryText"
        android:maxEms="8"
        android:layout_below="@+id/discountPriceItem"
        android:layout_alignRight="@+id/discountPriceItem"
        android:layout_alignEnd="@+id/discountPriceItem" />

</RelativeLayout>