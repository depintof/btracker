<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/general_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productItem"
        android:text="Producto"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/primaryText"
        android:gravity="left"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/descriptionItem"
        android:text="Descripcion"
        android:maxLines="2"
        android:textSize="16sp"
        android:textColor="@color/secondaryText"
        android:gravity="left"
        android:layout_below="@id/productItem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discountPriceItem"
        android:text="$34.230"
        android:textStyle="italic"
        android:textSize="24sp"
        android:textColor="@color/accentColor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/discountAmountItem"
        android:text="10%"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/secondaryText"
        android:layout_below="@+id/discountPriceItem"
        android:layout_alignRight="@+id/discountPriceItem"
        android:layout_alignEnd="@+id/discountPriceItem" />

</RelativeLayout>
